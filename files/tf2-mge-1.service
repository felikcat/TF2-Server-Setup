[Unit]
Description=TF2 MGE 1
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
User=steam
WorkingDirectory=/home/steam
ExecStart=/usr/bin/python3 run_mge_1.py
# Restart the server when it is stopped or crashed after 5 seconds.
# Comment out RestartSec if you want to restart immediately.
Restart=always
RestartSec=5
StandardInput=null

[Install]
WantedBy=multi-user.target
